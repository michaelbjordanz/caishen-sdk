{
  "compilerOptions": {
    "moduleDetection": "force",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipDefaultLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "useUnknownInCatchVariables": false
  },
  "exclude": ["node_modules", "dist"]
}